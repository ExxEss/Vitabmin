{
    "name": "Vitabmin",
    "version": "1.1",
    "description": "Revolutionary tabs manager.",
    "permissions": ["storage", "tabs", "sessions", "history", "tabCapture", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
        "service_worker": "background/service_worker.js"
    },
    "action": {
        "default_icon": "images/vitabmin.png",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content.js", "content/history.js", "lib/utils.js"],
            "css": ["css/history.css"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "commands": {
        "reload" : {
            "suggested_key": {
                "mac": "Shift+Alt+R",
                "windows": "Alt+Shift+R"
            },
            "description": "Reload all pages."
        }
    },
    "manifest_version": 3
}
