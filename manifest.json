{
    "name": "Vitabmin",
    "version": "1.1",
    "description": "Revolutionary tabs manager.",
    "permissions": ["nativeMessaging", "debugger", "storage", "tabs", "sessions",
         "file://*/*","http://*/*", "https://*/", "background", "history"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": ["background.js", "bg_history.js", "utils.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>",  "*://*/*", "file://*/*"],
            "js": ["content.js", "history.js", "utils.js"],
            "css": ["history.css"],
            "run_at": "document_start"
        }
    ],
    "manifest_version": 2
}